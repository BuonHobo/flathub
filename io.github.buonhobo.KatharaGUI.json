{
  "id": "io.github.buonhobo.KatharaGUI",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "KatharaGUI",
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=/run/docker.sock",
    "--filesystem=home",
    "--filesystem=xdg-run/gvfsd"
  ],
  "modules": [
    "python3-requirements.json",
    "python3-pyyaml.json",
    "python3-hatchling.json",
    "python3-pygments.json",
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": ["--buildtype=release", "-Dgtk3=false", "-Dgtk4=true"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/vte.git",
          "tag": "0.78.0"
        }
      ]
    },
    {
      "name": "KatharaGUI",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 src/frontend.py $FLATPAK_DEST/bin/KatharaGUI",
        "install -Dm755 src/connect.py /app/bin/connect.py",
        "install -Dm755 data/io.github.buonhobo.KatharaGUI.desktop /app/share/applications/io.github.buonhobo.KatharaGUI.desktop",
        "install -Dm755 data/KatharaGUI.svg /app/share/icons/hicolor/scalable/apps/io.github.buonhobo.KatharaGUI.svg",
        "install -Dm755 data/io.github.buonhobo.KatharaGUI.metainfo.xml /app/share/metainfo/io.github.buonhobo.KatharaGUI.metainfo.xml"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/BuonHobo/KatharaGUI.git",
          "commit": "d40128876c51657551770c340468d17f4e03901c"
        }
      ]
    }
  ]
}
